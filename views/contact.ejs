<%- include('./partials/header') -%>

<div class="container">
	<div id="main" class="row">
		<div class="col-0 col-md-1"></div>
		<div class="col-12 col-md-10">
			<div class="row justify-content-md-center">
				<div class="col-12">
					<div class="jumbotron mb-2">
						<div class="card text-center mb-2 border-0">
							<h1 class="text-center mt-3 mb-3">Contact Me.</h1>
							<i class="fas fa-phone-alt fa-5x"></i>
							<div class="card-body">
								<p class="card-text">Here are the lists of projects that I had done</p>
							</div>
						</div>
					</div>
					<form action="" method="">
						<div class="form-row">
							<div class="col-0 col-lg-2"></div>
							<div class="col-12 col-lg-8">
								<div class="form-group">
									<input class="form-control" type="text" name="subject" placeholder="Subject">
								</div>
								<div class="form-group">
									<textarea class="form-control" name="test" rows="7" placeholder="Write your message..."></textarea>
								</div>
								<div class="form-group align-self-center">
									<button class="btn btn-md btn-primary btn-block">Submit!</button>
								</div>
							</div>
							<div class="col-0 col-lg-2"></div>
						</div>
					</form>
				</div>
			</div>
		</div>
		<div class="col-0 col-md-1"></div>
	</div>
</div>

<%- include('./partials/footer') -%>